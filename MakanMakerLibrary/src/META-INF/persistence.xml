    <class>entity.CustomerEntity</class>
    <class>entity.MealKitEntity</class>
    <class>entity.ReviewEntity</class>
    <class>entity.OrderEntity</class>
    <class>entity.AddressEntity</class>
    <class>entity.CreditCardEntity</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/makanmaker?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="Computing151"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
