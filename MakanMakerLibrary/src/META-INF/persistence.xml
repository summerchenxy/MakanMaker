  <persistence-unit name="MakanMakerLibraryPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>entity.managerEntity</class>
    <class>entity.mealKitEntity</class>
    <class>entity.reviewEntity</class>
